<%= form_for task, html: { class: "flex flex-col gap-6" } do |f| %>
  <div class="flex flex-col gap-4">
    <%= f.label :scheduled_at, '日時', class: "font-bold" %>
    <%= f.datetime_field :scheduled_at, class: "input input-bordered" %>
  </div>
  <div class="flex flex-col gap-4">
    <%= f.label :content, '内容', class: "font-bold" %>
    <%= f.text_area :content, class: "input input-bordered h-15" %>
  </div>
  <%= f.submit task.new_record? ? "作成" : "更新", class: "btn btn-primary"  %>
<% end %>
